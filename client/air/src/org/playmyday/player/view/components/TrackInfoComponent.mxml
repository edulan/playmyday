<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 xmlns:vo="org.playmyday.player.model.vo.*">
	
	<fx:Declarations>
		<vo:TrackVO id="track" />
	</fx:Declarations>

	<s:VGroup width="100%" height="100%" gap="0">
		<s:VGroup height="40" horizontalAlign="center">
			<s:Label text="{track.title}" />
			<s:Label text="{track.artist} ({track.album})" />
		</s:VGroup>
		<s:VGroup horizontalAlign="center" verticalAlign="middle">
			<mx:Image source="{track.thumbnail}"
					  scaleContent="false" />
		</s:VGroup>
	</s:VGroup>

</s:Group>
